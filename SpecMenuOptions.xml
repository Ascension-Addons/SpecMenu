<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Frame name="SpecMenuOptionsFrame" hidden="true">
		<Layers>
			<Layer level="ARTWORK">
				<FontString inherits="GameFontNormalLarge" text="Spec Menu Settings">
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="15" y="-15"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
		<CheckButton name="$ParentToggleButton" inherits="InterfaceOptionsSmallCheckButtonTemplate">
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="15" y="-40"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						
					</OnLoad>
					<OnClick>
						
					</OnClick>
				</Scripts>
			</CheckButton>
			<Button name="$Parent_Menu" inherits="UIDropDownMenuTemplate">
				<Layers>
					<Layer level="BACKGROUND">
						<FontString name="$parentLabel" inherits="GameFontNormalSmall" text="Select Spec">
							<Anchors>
								<Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
									<Offset>
										<AbsDimension x="0" y="0"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="15" y="-60"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnShow>
						SpecMenuOptionsSpecDrop_OnShow();
					</OnShow>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				SpecMenu_OptionsPanelOnLoad(self);
			</OnLoad>
		</Scripts>
	</Frame>
</Ui>
